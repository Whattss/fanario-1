rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isOwner(userId) { return signedIn() && request.auth.uid == userId; }
    function hasActiveSub(creatorId) {
      return signedIn() && exists(/databases/$(database)/documents/subscriptions/$(request.auth.uid)/creators/$(creatorId)) &&
        get(/databases/$(database)/documents/subscriptions/$(request.auth.uid)/creators/$(creatorId)).data.status == "activa";
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if signedIn() && request.auth.uid == userId;
    }

    match /usernames/{username} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
    }

    match /creators/{creatorId} {
      allow read: if true;
      allow create, update, delete: if signedIn() && request.resource.data.ownerId == request.auth.uid;
    }

    match /creators/{creatorId}/posts/{postId} {
      allow read: if resource.data.isPublic == true || isOwner(resource.data.ownerId) || hasActiveSub(creatorId);
      allow create, update, delete: if isOwner(request.resource.data.ownerId);
    }

    match /posts/{postId} {
      allow read: if resource.data.isPublic == true || isOwner(resource.data.ownerId) || hasActiveSub(resource.data.creatorId);
      allow create, update, delete: if isOwner(request.resource.data.ownerId);
    }

    match /subscriptions/{userId}/creators/{creatorId} {
      allow read: if isOwner(userId);
      allow create, update, delete: if isOwner(userId);
    }
  }
}
