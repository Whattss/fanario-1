rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    
    // Archivos de publicaciones
    match /posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Avatar y portada de creadores
    match /creators/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
